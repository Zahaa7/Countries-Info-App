<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:padding="10dp"
        android:background="@color/colorPrimaryDark"
        android:layout_height="match_parent"
        tools:context=".network.DetailActivity">

    <androidx.cardview.widget.CardView
            android:layout_marginTop="20dp"
            app:cardCornerRadius="5dp"
            android:elevation="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <RelativeLayout
                android:background="@color/colorPrimary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                    android:layout_marginTop="20sp"
                    android:id="@+id/informations"
                    android:textSize="20sp"
                    android:fontFamily="@font/poppins_bold"
                    android:textColor="@color/colorAccent"
                    android:text="INFORMATIONS"
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <View
                    android:id="@+id/view1"
                    android:layout_marginTop="10dp"
                    android:background="#4DFFFFFF"
                    android:layout_below="@+id/informations"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"/>

            <LinearLayout
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/view1"
                    android:id="@+id/linear1"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="Capital City"
                        android:fontFamily="@font/poppins_regular"
                        android:textColor="@color/colorAccent"
                        android:textSize="16sp"
                        android:gravity="start"
                        android:layout_height="wrap_content"/>

                <TextView
                        android:id="@+id/tvCapitalCity"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:textSize="16sp"
                        android:hint=""
                        android:textColor="@color/colorAccent"
                        android:textColorHint="@color/colorAccent"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>


            </LinearLayout>

            <View
                    android:id="@+id/view2"
                    android:layout_marginTop="10dp"
                    android:background="#4DFFFFFF"
                    android:layout_below="@+id/linear1"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"/>

            <LinearLayout
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/view2"
                    android:id="@+id/linear2"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="Region"
                        android:fontFamily="@font/poppins_regular"
                        android:textColor="@color/colorAccent"
                        android:textSize="16sp"
                        android:gravity="start"
                        android:layout_height="wrap_content"/>

                <TextView
                        android:id="@+id/tvRegion"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:textSize="16sp"
                        android:hint=""
                        android:textColor="@color/colorAccent"
                        android:textColorHint="@color/colorAccent"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>


            </LinearLayout>

            <View
                    android:id="@+id/view3"
                    android:layout_marginTop="10dp"
                    android:background="#4DFFFFFF"
                    android:layout_below="@+id/linear2"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"/>

            <LinearLayout
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/view3"
                    android:id="@+id/linear3"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="Subregion"
                        android:fontFamily="@font/poppins_regular"
                        android:textColor="@color/colorAccent"
                        android:textSize="16sp"
                        android:gravity="start"
                        android:layout_height="wrap_content"/>

                <TextView
                        android:id="@+id/tvSubregion"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:textSize="16sp"
                        android:hint=""
                        android:textColor="@color/colorAccent"
                        android:textColorHint="@color/colorAccent"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>


            </LinearLayout>

            <View
                    android:id="@+id/view4"
                    android:layout_marginTop="10dp"
                    android:background="#4DFFFFFF"
                    android:layout_below="@+id/linear3"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"/>

            <LinearLayout
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/view4"
                    android:id="@+id/linear4"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="Population"
                        android:fontFamily="@font/poppins_regular"
                        android:textColor="@color/colorAccent"
                        android:textSize="16sp"
                        android:gravity="start"
                        android:layout_height="wrap_content"/>

                <TextView
                        android:id="@+id/tvPopulation"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:textSize="16sp"
                        android:hint=""
                        android:textColor="@color/colorAccent"
                        android:textColorHint="@color/colorAccent"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>


            </LinearLayout>

            <View
                    android:id="@+id/view5"
                    android:layout_marginTop="10dp"
                    android:background="#4DFFFFFF"
                    android:layout_below="@+id/linear4"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"/>

            <LinearLayout
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/view5"
                    android:id="@+id/linear5"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="Demonym"
                        android:fontFamily="@font/poppins_regular"
                        android:textColor="@color/colorAccent"
                        android:textSize="16sp"
                        android:gravity="start"
                        android:layout_height="wrap_content"/>

                <TextView
                        android:id="@+id/tvDemonym"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:textSize="16sp"
                        android:hint=""
                        android:textColor="@color/colorAccent"
                        android:textColorHint="@color/colorAccent"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>


            </LinearLayout>

            <View
                    android:id="@+id/view6"
                    android:layout_marginTop="10dp"
                    android:background="#4DFFFFFF"
                    android:layout_below="@+id/linear5"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"/>

            <LinearLayout
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/view6"
                    android:id="@+id/linear6"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="TimeZone"
                        android:fontFamily="@font/poppins_regular"
                        android:textColor="@color/colorAccent"
                        android:textSize="16sp"
                        android:gravity="start"
                        android:layout_height="wrap_content"/>

                <TextView
                        android:id="@+id/tvTimeZone"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:textSize="16sp"
                        android:hint=""
                        android:textColor="@color/colorAccent"
                        android:textColorHint="@color/colorAccent"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>


            </LinearLayout>

            <View
                    android:id="@+id/view7"
                    android:layout_marginTop="10dp"
                    android:background="#4DFFFFFF"
                    android:layout_below="@+id/linear6"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"/>

            <LinearLayout
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/view7"
                    android:id="@+id/linear7"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="Currencies"
                        android:fontFamily="@font/poppins_regular"
                        android:textColor="@color/colorAccent"
                        android:textSize="16sp"
                        android:gravity="start"
                        android:layout_height="wrap_content"/>

                <TextView
                        android:id="@+id/tvCurrencies"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:textSize="16sp"
                        android:hint=""
                        android:textColor="@color/colorAccent"
                        android:textColorHint="@color/colorAccent"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>


            </LinearLayout>

            <View
                    android:id="@+id/view8"
                    android:layout_marginTop="10dp"
                    android:background="#4DFFFFFF"
                    android:layout_below="@+id/linear7"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"/>

            <LinearLayout
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/view8"
                    android:id="@+id/linear8"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="Languages"
                        android:fontFamily="@font/poppins_regular"
                        android:textColor="@color/colorAccent"
                        android:textSize="16sp"
                        android:gravity="start"
                        android:layout_height="wrap_content"/>

                <TextView
                        android:id="@+id/tvLanguages"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:textSize="16sp"
                        android:hint=""
                        android:textColor="@color/colorAccent"
                        android:textColorHint="@color/colorAccent"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>


            </LinearLayout>

            <View
                    android:id="@+id/view9"
                    android:layout_marginTop="10dp"
                    android:background="#4DFFFFFF"
                    android:layout_below="@+id/linear8"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"/>

            <LinearLayout
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/view9"
                    android:id="@+id/linear9"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="Translations"
                        android:fontFamily="@font/poppins_regular"
                        android:textColor="@color/colorAccent"
                        android:textSize="16sp"
                        android:gravity="start"
                        android:layout_height="wrap_content"/>

                <TextView
                        android:id="@+id/tvTranslations"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:textSize="16sp"
                        android:hint=""
                        android:textColor="@color/colorAccent"
                        android:textColorHint="@color/colorAccent"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>


            </LinearLayout>

            <View
                    android:id="@+id/view10"
                    android:layout_marginTop="10dp"
                    android:background="#4DFFFFFF"
                    android:layout_below="@+id/linear9"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"/>

            <LinearLayout
                    android:layout_marginBottom="30dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/view10"
                    android:id="@+id/linear10"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="CountryCode"
                        android:fontFamily="@font/poppins_regular"
                        android:textColor="@color/colorAccent"
                        android:textSize="16sp"
                        android:gravity="start"
                        android:layout_height="wrap_content"/>

                <TextView
                        android:id="@+id/tvCountryCode"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:textSize="16sp"
                        android:hint=""
                        android:textColor="@color/colorAccent"
                        android:textColorHint="@color/colorAccent"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>


            </LinearLayout>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</ScrollView>